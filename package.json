{
  "name": "es6-webpack-boilerplate",
  "title": "An ES6 Boilerplate",
  "description": "My personal ES6 boilerplate built with TypeScript/JavaScript, Webpack 5, PostCSS, Jest, ESLint, and Stylelint.",
  "url": "URL",
  "author": "Vijay Dubb",
  "copyright": "2013",
  "version": "4.0.0",
  "license": "MIT",
  "main": "",
  "repository": {
    "type": "git",
    "url": "https://github.com/VD39/es6-webpack-boilerplate.git"
  },
  "scripts": {
    "build": "webpack --progress --config webpack.config.babel.js",
    "check-types": "tsc --project tsconfig.json --noEmit",
    "lint:all": "yarn lint:scripts && yarn check-types && yarn lint:styles",
    "lint:all:fix": "yarn lint:scripts:fix && yarn lint:styles:fix",
    "lint:scripts": "eslint --ignore-path .gitignore **/*.{js,jsx,json,ts,tsx}",
    "lint:scripts:fix": "yarn lint:scripts --fix",
    "lint:styles": "stylelint --ignore-path .gitignore **/*.css",
    "lint:styles:fix": "yarn lint:styles --fix",
    "serve": "cross-env NODE_ENV=development webpack serve --config webpack.config.babel.js",
    "check-size": "webpack --config webpack.config.babel.js --profile --json > webpack-stats.json && webpack-bundle-analyzer webpack-stats.json",
    "test": "jest",
    "test:watch": "yarn test --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/preset-env": "^7.12.11",
    "@babel/register": "^7.12.10",
    "@types/jest": "^26.0.19",
    "@typescript-eslint/eslint-plugin": "^4.11.1",
    "@typescript-eslint/parser": "^4.11.1",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.2.2",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^7.0.0",
    "core-js": "3",
    "cross-env": "^7.0.3",
    "css-loader": "^5.0.1",
    "css-minimizer-webpack-plugin": "^1.1.5",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-jest-formatting": "^2.0.0",
    "eslint-plugin-prettier": "^3.3.0",
    "eslint-webpack-plugin": "^2.4.1",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.0.0-beta.1",
    "husky": "^4.3.6",
    "image-minimizer-webpack-plugin": "^2.1.0",
    "imagemin-gifsicle": "^7.0.0",
    "imagemin-mozjpeg": "^9.0.0",
    "imagemin-pngquant": "^9.0.1",
    "imagemin-svgo": "^8.0.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "mini-css-extract-plugin": "^1.3.3",
    "postcss": "^8.2.2",
    "postcss-easy-import": "^3.0.0",
    "postcss-loader": "^4.1.0",
    "postcss-mixins": "^7.0.2",
    "postcss-nested": "^5.0.3",
    "postcss-preset-env": "^6.7.0",
    "postcss-simple-vars": "^6.0.2",
    "postcss-url": "^10.1.1",
    "prettier": "^2.2.1",
    "raw-loader": "^4.0.2",
    "style-loader": "^2.0.0",
    "stylelint": "^13.8.0",
    "stylelint-config-recess-order": "^2.3.0",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-webpack-plugin": "^2.1.1",
    "terser-webpack-plugin": "^5.0.3",
    "ts-jest": "^26.4.4",
    "ts-loader": "^8.0.13",
    "typescript": "^4.1.3",
    "url-loader": "^4.1.1",
    "webpack": "^5.11.1",
    "webpack-bundle-analyzer": "^4.3.0",
    "webpack-cli": "^4.3.1",
    "webpack-dev-server": "^v4.0.0-beta.0",
    "webpack-merge": "^5.7.3"
  },
  "keywords": [
    "Babel",
    "Boilerplate",
    "ES6",
    "ESLint",
    "Husky",
    "Jest",
    "JavaScript",
    "PostCSS",
    "Stylelint",
    "TypeScript",
    "Webpack 5"
  ],
  "browserslist": [
    "> 5%",
    "not dead",
    "not IE < 11"
  ]
}
